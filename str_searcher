#include <stdio.h>;

char* string = "", substring = "";
char** pointer = "";
int anzahl = 0;

int main(void){
    printf("Bitte gebe ein Wort/einen Satz ein:");
    scanf("%s",&string);
    printf("Bitte gebe die gesuchte Zeichenkette ein:");
    scanf("%s",&substring);
    anzahl = substrings(string,substring,pointer,anzahl)
    printf("Die Zeichenkette %s wurde %d mal in %s gefunden",substring,anzahl,string);
}

// str = inputstring, substr = searched substring, ptr = ??, n = number of found strings
int	substrings(char* str, char* substr, char** ptr, int n){
    for(int i = 0; i < str.length(); i++){
        if(str[i] == substr[0]){
            if(str[i+1] == substr[1]){
                if(str[i+2] == substr[2]){
                    if(str[i+3] == substr[3]){
                        n++;
                        **ptr[n] = i; 
                    }
                }
            }
        }
    }
    return n;
}
